@using RoboticsWebsite.Models

@model CalendarViewModel

@{
    ViewBag.Title = "CalendarMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (null == Session["CurrentMonth"])
    {
        Session["CurrentMonth"] = DateTime.Now.Month;
    }
}

<h2>CalendarMaster</h2>

<div>
    @Html.LabelFor(m => m.CurrentMonth)
</div>

<table class="table">
    <tr>

        @for (int i = 0; i < Model.NumDays; i++)
        {
            if (i % 6 == 0)
            {
                @Html.Raw("</tr>");
                @Html.Raw("<tr>");
            }

            @Html.Partial("Day");
        }
    </tr>                
</table>
                

